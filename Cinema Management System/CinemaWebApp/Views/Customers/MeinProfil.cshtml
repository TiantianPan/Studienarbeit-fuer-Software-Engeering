@model CinamaLib1.Customer
@{
    ViewBag.Title = "Mein Profil";
}
<hr>
<h2>Mein Konto</h2>
<p>
    Hier kannst du deine persönlichen Angaben bearbeiten.
</p>

<div>
    <dl class="dl-horizontal">
        <dt>
            Nachname:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Vorname:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            StammNr.:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeNum)
        </dd>
        
        <dt>
            Telefon:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefon)
        </dd>

        <dt>
              E-Mail:
        </dt>
        <dd>
              @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Admin:
        </dt>
        @if (Model.IsAdmin == true)
        {
            <dd>
                @Html.CheckBoxFor(model => model.IsAdmin)
            </dd>
        }
        @if (Model.IsAdmin == false)
        {
            <dd>
                @Html.CheckBoxFor(model => model.IsAdmin, new { @disabled = "disabled" })
            </dd>
        }
    </dl>
</div>
<p>
    <a class="btn btn-default" href="@Url.Action("HomePage", "Home")" role="button"><span class="glyphicon glyphicon-chevron-left"></span> Back to List</a>
</p>