@model CinamaLib1.Movie
@{
    ViewBag.Title = "Movie Delete";
}
<hr>
<h2>Movie Delete</h2>
<h3>Bist du sicher, dass du dieses Movie löschen möchtest?</h3>
<p>
    Dies Movie wird unwiederruflich gelöscht.
</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Movie:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Director:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Director)
        </dd>

        <dt>
            Actor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Actor)
        </dd>

        <dt>
            Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MovieType)
        </dd>

        <dt>
            Full Price:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullPrice)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Index", "Movies") " class="btn btn-default" role="button"><span class="glyphicon glyphicon-chevron-left"></span> Back to List</a>
            </div>
        </div>

    }
</div>
