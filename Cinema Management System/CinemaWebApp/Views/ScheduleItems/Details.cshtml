@model CinamaLib1.ScheduleItem
@{
    ViewBag.Title = "ScheduleItem Details";
}
<hr>
<h3>Details zum Scheduleitem</h3>
<p>
    Hier findest du alle Informationen zum jeweiligen ScheduleItem.
</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Date Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt>
            Poster
        </dt>
        <dd>
            <div class="item">
                <img class="img-thumbnail" src="@Url.Content(Model.MovieItem.Poster)" alt="Test5" style="width:200px; text-align: center " />
            </div>
        </dd>
        <dt>
            Movie:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MovieItem.Name)
        </dd>

        <dt>
            Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MovieItem.MovieType)
        </dd>

        <dt>
            Dirctor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MovieItem.Director)
        </dd>

        <dt>
            Actor:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MovieItem.Actor)
        </dd>

        <dt>
            Full Price:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MovieItem.FullPrice)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Index", "ScheduleItems")" class="btn btn-default" role="button"><span class="glyphicon glyphicon-chevron-left"></span> back to List</a>
    <a href="@Url.Action("Edit", "ScheduleItems", new {id=Model.Id})" class="btn btn-default" role="button"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
</p>

